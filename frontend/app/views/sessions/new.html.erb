<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-md">
  <div class="bg-white px-6 py-8 shadow rounded-lg sm:px-10">
    <h2 class="text-center text-xl font-semibold mb-6 text-gray-700"><%= t('.title') %></h2>
    <%= form_with(url: sign_in_path, class: "space-y-6") do |form| %>
      <div>
        <%= form.label :login, t('.login_label'), class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= form.text_field :login, required: true, autofocus: true, autocomplete: "username email", value: @login_hint, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= form.label :password, t('.password_label'), class: "block text-sm font-medium leading-6 text-gray-900" %>
        </div>
        <div class="mt-2">
          <%= form.password_field :password, required: true, autocomplete: "current-password", class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= form.submit t('.submit'), class: "flex w-full justify-center rounded-md bg-blue-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-4 text-center text-xs text-gray-500">
      <%= t('.forgot_password_instruction') %>
    </p>

    <p class="mt-8 text-center text-sm text-gray-500">
      <%= raw t('.signup_link', link: link_to(t('.signup'), sign_up_path, class: "font-semibold leading-6 text-blue-600 hover:text-blue-500")) %>
    </p>
  </div>
</div>
