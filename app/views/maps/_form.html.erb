<%= form_with(model: map, local: true, class: "space-y-6") do |form| %>
  <% if map.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= t('common.errors', count: map.errors.count) %></h3>
          <ul class="mt-2 list-disc pl-5 space-y-1 text-sm text-red-700">
            <% map.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6">
    <div>
      <%= form.label :name, t('maps.form.name'), class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :name, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: t('maps.form.name_placeholder') %>
      </div>
    </div>

    <div>
      <%= form.label :description, t('maps.form.description'), class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_area :description, rows: 4, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: t('maps.form.description_placeholder') %>
      </div>
      <p class="mt-1 text-sm text-gray-500"><%= t('maps.form.description_help') %></p>
    </div>
    
    <!-- 文件上传部分 -->
    <div class="border border-gray-200 rounded-md p-4 space-y-4">
      <h3 class="text-lg font-medium leading-6 text-gray-900"><%= t('maps.form.files') %></h3>
      
      <div>
        <%= form.label :map_config, t('maps.form.map_config'), class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 flex items-center">
          <% if map.map_config.attached? %>
            <span class="mr-2 text-sm text-gray-500"><%= map.map_config.filename %></span>
            <% if map.map_config.attached? %>
              <%= link_to t('maps.form.view_file'), rails_blob_url(map.map_config), class: "text-blue-600 hover:text-blue-800 text-sm", target: "_blank" %>
            <% end %>
          <% end %>
        </div>
        <div class="mt-1">
          <%= form.file_field :map_config, class: "block w-full text-sm text-gray-500
            file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0
            file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700
            hover:file:bg-blue-100" %>
        </div>
        <p class="mt-1 text-sm text-gray-500"><%= t('maps.form.map_config_help') %></p>
      </div>
      
      <div>
        <%= form.label :map_image, t('maps.form.map_image'), class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 flex items-center">
          <% if map.map_image.attached? %>
            <div class="mr-2">
              <%= image_tag map.thumbnail_url, alt: map.name, class: "h-20 w-20 object-cover rounded-md" %>
            </div>
            <%= link_to t('maps.form.view_image'), rails_blob_url(map.map_image), class: "text-blue-600 hover:text-blue-800 text-sm", target: "_blank" %>
          <% end %>
        </div>
        <div class="mt-1">
          <%= form.file_field :map_image, class: "block w-full text-sm text-gray-500
            file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0
            file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700
            hover:file:bg-blue-100" %>
        </div>
        <p class="mt-1 text-sm text-gray-500"><%= t('maps.form.map_image_help') %></p>
      </div>
    </div>

    <div>
      <%= form.label :map_data_url, t('maps.form.map_data_url'), class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :map_data_url, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: t('maps.form.map_data_url_placeholder') %>
      </div>
      <p class="mt-1 text-sm text-gray-500"><%= t('maps.form.map_data_url_help') %></p>
    </div>

    <% if map.persisted? && map.is_active? %>
      <div class="bg-green-50 border border-green-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-green-800"><%= t('maps.form.active_map_notice') %></h3>
            <div class="mt-2 text-sm text-green-700">
              <p><%= t('maps.form.active_map_info') %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if !map.persisted? %>
      <div class="bg-blue-50 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800"><%= t('maps.form.auto_mapping_title') %></h3>
            <div class="mt-2 text-sm text-blue-700">
              <p><%= t('maps.form.auto_mapping_info') %></p>
              <%= link_to t('maps.form.create_mapping_task'), new_task_path(task_type: :map_build_auto), class: "mt-1 text-blue-900 underline" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="flex justify-end space-x-3 mt-6">
    <% if map.persisted? %>
      <%= link_to t('common.cancel'), map_path(map), class: "btn btn-outline" %>
      <%= form.submit t('common.update'), class: "btn btn-primary" %>
    <% else %>
      <%= link_to t('common.cancel'), maps_path, class: "btn btn-outline" %>
      <%= form.submit t('common.submit'), class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %> 