<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= t('maps.titles.edit') %>: <%= @map.name %></h1>
    <div class="flex space-x-3">
      <%= link_to t('common.back'), map_path(@map), class: "btn btn-outline" %>
      <%= link_to t('common.all_maps'), maps_path, class: "btn btn-outline" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4"><%= t('maps.form.title') %></h2>
    
    <%= render 'form', map: @map %>
  </div>
</div>
