<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= t('maps.titles.index') %></h1>
<div>
      <%= link_to t('maps.buttons.create'), new_map_path, class: "btn btn-primary" %>
    </div>
  </div>

  <% if @maps.empty? %>
    <div class="bg-gray-50 p-6 rounded-lg text-center">
      <p class="text-gray-500"><%= t('maps.no_maps') %></p>
      <%= link_to t('maps.buttons.create_first'), new_map_path, class: "btn btn-primary mt-3" %>
    </div>
  <% else %>
    <div class="bg-white shadow overflow-hidden rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('common.name') %></th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('common.preview') %></th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('common.description') %></th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('common.created_by') %></th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('common.created_at') %></th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('common.status') %></th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('common.actions') %></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @maps.each do |map| %>
            <tr class="<%= map.is_active? ? 'bg-green-50' : '' %>">
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to map.name, map_path(map), class: "text-blue-600 hover:text-blue-900" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if map.thumbnail.attached? || map.map_image.attached? %>
                  <%= link_to map_path(map) do %>
                    <%= image_tag map.thumbnail_url, class: "h-12 w-12 object-cover rounded", alt: map.name %>
                  <% end %>
                <% elsif map.map_data_url.present? && map.map_data_url.ends_with?('.png', '.jpg', '.jpeg', '.gif', '.pgm') %>
                  <%= link_to map_path(map) do %>
                    <%= image_tag map.map_data_url, class: "h-12 w-12 object-cover rounded", alt: map.name %>
                  <% end %>
                <% else %>
                  <span class="text-gray-400 text-xs"><%= t('maps.no_image') %></span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900 truncate max-w-xs">
                  <%= map.description.present? ? map.description : t('common.not_available') %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= map.created_by_user.username %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= l map.created_at, format: :long %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if map.is_active? %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    <%= t('maps.status.active') %>
                  </span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                    <%= t('maps.status.inactive') %>
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex space-x-2">
                  <%= link_to t('common.view'), map_path(map), class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to t('common.edit'), edit_map_path(map), class: "text-indigo-600 hover:text-indigo-900" %>
                  
                  <% if !map.is_active? %>
                    <%= button_to t('maps.buttons.activate'), activate_map_path(map), method: :post, class: "text-green-600 hover:text-green-900 bg-transparent border-0" %>
                  <% end %>
                  
                  <% if !map.tasks.exists? %>
                    <%= button_to t('common.delete'), map_path(map), method: :delete, data: { confirm: t('common.confirm_delete') }, class: "text-red-600 hover:text-red-900 bg-transparent border-0" %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="mt-6">
      <h2 class="text-xl font-semibold mb-3"><%= t('maps.active_map') %></h2>
      <% if @active_map %>
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 flex items-center">
          <% if @active_map.thumbnail.attached? || @active_map.map_image.attached? %>
            <div class="flex-shrink-0 mr-4">
              <%= image_tag @active_map.thumbnail_url, class: "h-20 w-20 object-cover rounded", alt: @active_map.name %>
            </div>
          <% end %>
          <div>
            <p class="font-semibold"><%= @active_map.name %></p>
            <p class="text-gray-600 text-sm mt-1"><%= @active_map.description %></p>
            <div class="mt-3">
              <%= link_to t('common.details'), map_path(@active_map), class: "text-blue-600 hover:text-blue-900 text-sm" %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <p><%= t('maps.no_active_map') %></p>
        </div>
      <% end %>
    </div>
  <% end %>
  
  <div class="mt-8">
    <h2 class="text-xl font-semibold mb-3"><%= t('maps.building_tasks.title') %></h2>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <p><%= t('maps.building_tasks.description') %></p>
      <div class="mt-3">
        <%= link_to t('maps.building_tasks.create'), new_task_path(task_type: :map_build_auto), class: "btn btn-blue" %>
      </div>
    </div>
  </div>
</div>
