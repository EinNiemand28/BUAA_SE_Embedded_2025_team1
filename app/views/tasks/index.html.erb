<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6">
  <div class="md:flex md:items-center md:justify-between mb-4">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        <%= t('tasks.index.title') %>
      </h2>
      <p class="mt-1 text-sm text-gray-500"><%= t('tasks.index.tasks_count', count: @tasks.count) %></p>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4">
      <%= link_to t('tasks.index.create_task'), new_task_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>

  <% if @tasks.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 tasks-list">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('tasks.index.id') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('tasks.index.type') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('tasks.index.status') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('tasks.index.created_at') %></th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only"><%= t('tasks.index.actions') %></span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @tasks.each do |task| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150" data-task-id="<%= task.id %>">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  #<%= task.id %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2.5 py-1 rounded-full text-xs font-medium inline-flex items-center
                    <%= case task.task_type
                        when 'map_build_auto' then 'bg-purple-100 text-purple-800'
                        when 'navigation_to_point' then 'bg-green-100 text-green-800'
                        when 'fetch_book_to_transfer' then 'bg-blue-100 text-blue-800'
                        when 'return_book_from_transfer' then 'bg-yellow-100 text-yellow-800'
                        when 'inventory_scan_and_relocate' then 'bg-orange-100 text-orange-800'
                        when 'inventory_full_inspection' then 'bg-red-100 text-red-800'
                        when 'load_map' then 'bg-indigo-100 text-indigo-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <% icon_class = case task.task_type
                                    when 'map_build_auto' then 'map'
                                    when 'navigation_to_point' then 'navigation'
                                    when 'fetch_book_to_transfer', 'return_book_from_transfer' then 'book'
                                    when 'inventory_scan_and_relocate', 'inventory_full_inspection' then 'scan'
                                    when 'load_map' then 'map'
                                    else 'task'
                                    end
                    %>
                    <% if icon_class == 'map' %>
                      <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"></polygon>
                        <line x1="8" y1="2" x2="8" y2="18"></line>
                        <line x1="16" y1="6" x2="16" y2="22"></line>
                      </svg>
                    <% elsif icon_class == 'navigation' %>
                      <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="3 11 22 2 13 21 11 13 3 11"></polygon>
                      </svg>
                    <% elsif icon_class == 'book' %>
                      <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                        <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                      </svg>
                    <% elsif icon_class == 'scan' %>
                      <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 7V5a2 2 0 0 1 2-2h2"></path>
                        <path d="M17 3h2a2 2 0 0 1 2 2v2"></path>
                        <path d="M21 17v2a2 2 0 0 1-2 2h-2"></path>
                        <path d="M7 21H5a2 2 0 0 1-2-2v-2"></path>
                        <line x1="7" y1="12" x2="17" y2="12"></line>
                      </svg>
                    <% else %>
                      <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                      </svg>
                    <% end %>
                    <%= t("activerecord.enums.task.task_type.#{task.task_type}") %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap task-status">
                  <span class="px-2.5 py-1 rounded-full text-xs font-medium inline-flex items-center
                    <%= case task.status
                        when 'pending' then 'bg-gray-100 text-gray-800'
                        when 'processing' then 'bg-blue-100 text-blue-800'
                        when 'completed' then 'bg-green-100 text-green-800'
                        when 'failed' then 'bg-red-100 text-red-800'
                        when 'cancelled' then 'bg-yellow-100 text-yellow-800'
                        when 'cancelling' then 'bg-orange-100 text-orange-800'
                        end %>">
                    <% icon_class = case task.status
                                    when 'pending' then 'pending'
                                    when 'processing' then 'processing'
                                    when 'completed' then 'completed'
                                    when 'failed' then 'failed'
                                    when 'cancelled', 'cancelling' then 'cancelled'
                                    end
                    %>
                    <% if icon_class == 'pending' %>
                      <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                      </svg>
                    <% elsif icon_class == 'processing' %>
                      <svg class="h-3 w-3 mr-1 animate-spin" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="12" y1="2" x2="12" y2="6"></line>
                        <line x1="12" y1="18" x2="12" y2="22"></line>
                        <line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line>
                        <line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line>
                        <line x1="2" y1="12" x2="6" y2="12"></line>
                        <line x1="18" y1="12" x2="22" y2="12"></line>
                        <line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line>
                        <line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line>
                      </svg>
                    <% elsif icon_class == 'completed' %>
                      <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                      </svg>
                    <% elsif icon_class == 'failed' %>
                      <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="15" y1="9" x2="9" y2="15"></line>
                        <line x1="9" y1="9" x2="15" y2="15"></line>
                      </svg>
                    <% elsif icon_class == 'cancelled' %>
                      <svg class="h-3 w-3 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="8" y1="12" x2="16" y2="12"></line>
                      </svg>
                    <% end %>
                    <%= t("activerecord.enums.task.status.#{task.status}") %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= task.created_at.strftime('%Y-%m-%d %H:%M') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex justify-end items-center space-x-3">
                    <%= link_to task_path(task), class: "text-blue-600 hover:text-blue-900 flex items-center" do %>
                      <svg class="h-4 w-4 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                      </svg>
                      <%= t('common.view') %>
                    <% end %>
                    
                    <% if task.pending? %>
                      <%= link_to edit_task_path(task), class: "text-green-600 hover:text-green-900 flex items-center" do %>
                        <svg class="h-4 w-4 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M12 20h9"></path>
                          <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
                        </svg>
                        <%= t('common.edit') %>
                      <% end %>
                    <% end %>
                    
                    <% if task.pending? || task.processing? %>
                      <%= button_to cancel_task_path(task), method: :post, form: { class: "inline-flex items-center" }, class: "text-yellow-600 hover:text-yellow-900 flex items-center" do %>
                        <svg class="h-4 w-4 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <circle cx="12" cy="12" r="10"></circle>
                          <line x1="8" y1="12" x2="16" y2="12"></line>
                        </svg>
                        <%= t('common.cancel') %>
                      <% end %>
                    <% end %>
                    
                    <% if !task.processing? && !task.cancelling? %>
                      <%= button_to task_path(task), method: :delete, form: { class: "inline-flex items-center", data: { turbo_confirm: t('tasks.show.confirm_delete') } }, class: "text-red-600 hover:text-red-900 flex items-center" do %>
                        <svg class="h-4 w-4 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M3 6h18"></path>
                          <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                          <line x1="10" y1="11" x2="10" y2="17"></line>
                          <line x1="14" y1="11" x2="14" y2="17"></line>
                        </svg>
                        <%= t('common.delete') %>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t('tasks.index.no_tasks') %></h3>
        <p class="mt-1 text-sm text-gray-500"><%= t('tasks.index.create_your_first_task') %></p>
        <div class="mt-6">
          <%= link_to t('tasks.index.create_task'), new_task_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
